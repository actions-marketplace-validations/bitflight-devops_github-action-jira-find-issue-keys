{
  "name": "@bitflight-devops/github-action-jira-find-issue-keys",
  "version": "1.0.8",
  "description": "This action will find the issue keys in the GitHub event and return them as a comma separated list",
  "main": "dist/index.js",
  "displayName": "bitflight-devops/github-action-jira-find-issue-keys",
  "repository": {
    "type": "git",
    "url": "git@github.com:bitflight-devops/github-action-jira-find-issue-keys.git"
  },
  "bugs": {
    "url": "https://github.com/bitflight-devops/github-action-jira-find-issue-keys/issues"
  },
  "keywords": [
    "actions",
    "github",
    "node12",
    "jira",
    "tickets"
  ],
  "author": "Jamie Nelson <jamie@bitflight.io>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "tsc": "tsc --project tsconfig.json",
    "test": "NODE_ENV=testing jest",
    "test-ci": "NODE_ENV=testing jest --ci --reporters=default --reporters=jest-junit",
    "clean": "rimraf dist",
    "build": "yarn run clean && yarn run tsc && ncc build lib/index.js -o dist --source-map --license licenses.txt --target es2021",
    "format": "prettier --list-different \"./{**/,}*.{ts,js,json,md,yml}\"",
    "format:fix": "prettier --write \"./{**/,}*.{ts,js,json,md,yml}\"",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "yon run format:fix;eslint . --ext .js,.ts --fix",
    "lint:markdown": "markdownlint \"**/*.md\" --config=.markdownlint.json --ignore-path=.markdownlintignore",
    "lint:markdown:fix": "yarn lint:markdown --fix",
    "all": "yon run build && yon run format && yon run lint && yon run package && yon test",
    "commit": "git-cz",
    "pre-add": "yarn format:fix",
    "pre-commit": "yarn run lint:fix && yon run build && git add dist && yarn run generate-docs",
    "pre-push": "yarn format",
    "preversion": "echo 'Running test';yon test",
    "version": "echo 'Run versioning commands';yon generate-docs;echo \"::set-output name=tag::v${npm_package_version}\"",
    "postversion": "echo 'Running post versioning commands';git push --tags -f && git push && echo \"Successfully released version $npm_package_version!\"",
    "generate-docs": "github-action-readme-generator && prettier --write .ghadocs.json README.md && git add .ghadocs.json README.md",
    "prepare": "husky install;git config --global rebase.autosquash true",
    "codegen": "graphql-codegen --config codegen.yml"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-length": [
        0
      ],
      "body-max-line-length": [
        0
      ],
      "footer-max-length": [
        0
      ],
      "footer-max-line-length": [
        0
      ],
      "header-max-length": [
        0
      ]
    }
  },
  "engines": {
    "node": "^10.12.0 || >=12.0.0"
  },
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "dist"
  ],
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/github": "^5.0.0",
    "@octokit/graphql": "^4.8.0",
    "@octokit/rest": "^18.12.0",
    "@tsconfig/node16": "^1.0.2",
    "ansi-colors": "^4.1.1",
    "graphql": "^16.3.0",
    "jira.js": "^2.11.0",
    "lodash": "^4.17.21",
    "tslib": "^2.3.1",
    "yaml": "^1.10.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@commitlint/prompt": "^16.2.1",
    "@github/prettier-config": "^0.0.4",
    "@octokit/graphql-schema": "^10.73.0",
    "@types/jest": "^27.4.1",
    "@types/js-yaml": "^4.0.5",
    "@types/lodash": "^4.14.179",
    "@types/nconf": "^0.10.2",
    "@types/node": "^17.0.21",
    "@types/node-fetch": "^2.6.1",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "@typescript-eslint/typescript-estree": "^5.14.0",
    "@vercel/ncc": "^0.33.3",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-github": "^4.3.5",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "github-action-readme-generator": "1.0.12",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-circus": "^27.5.1",
    "jest-junit": "^13.0.0",
    "js-yaml": "^4.1.0",
    "lint-staged": "^12.3.5",
    "markdownlint-cli": "^0.31.1",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "semantic-release": "^19.0.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2",
    "typescript-eslint-language-service": "^5.0.0",
    "yarn-or-npm": "^3.0.1"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/helpers/",
      "/node_modules/"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "jest-junit": {
    "suiteNameTemplate": "{filepath}",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}"
  },
  "lint-staged": {
    "{src,__tests__}/**/*.js": "eslint --cache --fix",
    "*.ts": [
      "eslint --cache --fix"
    ]
  }
}
